#nt-savepath nav{
    flow:horizontal;
    border-spacing: 10dip;
    padding: 5dip;
}
#nt-savepath button{
    width: max-content;
    height: 1.6em;
    line-height: 1.6em;
    background: transparent;
    border: 1px @BORDERCOLOR solid;
    border-radius: 5dip;
    color: @FONTCOLOR-DARK;
    font-family: exo2;
    font-size: 10pt;
    padding: 0 0.6em;
}
#nt-savepath p{
    border-radius: 5dip;
    background: #eee;
    padding: 0 0.6em;
    flow:horizontal;
}
input[type=path]{
    width: 200dip;
  prototype: PathInput;
  flow:horizontal;
  border:1dip solid threedshadow;
  background: window;
  height:1.6em;
}
input[type=path] > caption
{
  /*flow:text;*/
  /*behavior:edit;*/
  /*white-space:pre;*/
  white-space:nowrap;
  overflow-x:hidden;
  text-overflow:path-ellipsis;
  line-height:1.6em;
  width:*;
  padding:0 4dip;
  color: @FONTCOLOR-DARK;
}

input[type=path] > button {
  /*style-set:none;*/
  behavior:clickable;
  width:0.6em;
  height:*;
  background: url(stock:arrow-down) no-repeat 50% 50%;
}

input#test {
 width:20em;
}

option > code {
    color:red;
  display:inline-block;
  border:1px solid #DCB;
  width:1.4em;
  margin-right:2px;
  text-align:center;
  }
option:current > code {
    border-color:transparent;
}

widget[type=path]{
    width: *;
    height: 1.6em;
    overflow: hidden;
    flow:vertical;
    position: relative;
}
widget[type=path] > caption{
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    /*width: *;*/
    /*height: 1.6em;*/
    flow:horizontal;
    border-spacing: 10dip;
}
widget[type=path] > caption>text{
        width: *;
    white-space:nowrap;
  overflow-x:hidden;
  text-overflow:path-ellipsis;
  line-height:1.6em;
}
widget[type=path] > caption>button{
    /*width: max-content;*/
}
widget[type=path] > option{
    /*behavior:edit;*/
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    /*width: *;*/
    /*height: 100%%;*/
    /*height: 6.0em;*/
    /*display: none;*/
    border: 1px @BORDERCOLOR solid;
    border-radius: 5dip;
    font-size: 12pt;
    overflow: hidden;
    transform: translate(0,100%);
}
widget[type=path] > option > textarea{
    /*border: transparent;*/
    background: transparent;
    overflow: auto;
    /*size: *;*/
    font-family: exo2;
    font-size: 12pt;
    padding: 5dip;
    word-wrap:break-word;
}
.path-edit{
    height: 6.4em !important;
}
.path-edit caption{
    transform: translate(0,-100%);
}
.path-edit option{
    transform: translate(0,0)!important;
}
