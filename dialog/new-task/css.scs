#nt-savepath{
    width: *;
    overflow: hidden;
    flow:vertical;
}
#nt-savepath nav{
    width: *;
    flow:horizontal;
    border-spacing: 10dip;
    /*padding: 5dip;*/
    padding: 5dip 0;
}
#nt-savepath button{
    /*width: max-content;*/
    height: 1.6em;
    line-height: 1.6em;
    background: transparent;
    border: 1px @BORDERCOLOR solid;
    border-radius: 5dip;
    color: @FONTCOLOR-DARK;
    font-family: exo2;
    font-size: 10pt;
    padding: 0 0.6em;
}
#nt-savepath .container{
    width: *;
    border: 1px @BORDERCOLOR solid;
    border-radius: 5dip;
    padding: 5dip;
    height: 1.5em;
    min-height: 1.5em;
    flow:vertical;
}
#nt-savepath .container.custom-mode{
    height:auto;
    /*transition: height(linear, 200ms);*/
}
#nt-savepath .container .preview-download-path{
    height:1.5em;
    line-height:1.5em;
    overflow-x:hidden;
    white-space:nowrap;
    text-overflow:path-ellipsis;
    cursor: text;
    behavior:clickable;
}
#nt-savepath .container.custom-mode .preview-download-path{
/*    opacity: 0;
    transform: translate(0, -100%);
    transition: opacity(linear, 200ms) transform(cubic-out, 200ms) ;
    z-index: 0;*/
    opacity: 0;
    height: 0;
    /*transition: opacity(linear, 200ms) height(linear, 200ms);*/
}
#nt-savepath .container .custom-download-path{
    opacity:0;
    width: *;
    max-height: 6.4em;
    height: max-content;
    line-height:1.5em;
    overflow: auto;
    background: transparent;
    font-size: 12pt;
    word-wrap:break-word;
    /*transform: translate(0, 100%);*/
    /*transition: opacity(linear, 200ms) transform(cubic-out, 200ms) ;*/
}
#nt-savepath .container.custom-mode .custom-download-path{
    opacity: 1;
    /*transform: translate(0, 0);*/
}
.preview-download-path popup[role=overflow-tooltip] {
    background: gold;
    border:1dip solid;
    border-radius: 4dip;
    padding:4dip;
}

#nt-btn{
    flow:horizontal;
    border-spacing: 10dip;
}


