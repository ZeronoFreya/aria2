@import "../../scs/common.scs";
html{
    width: 310dip;
    /*height: width(61.8%);*/
    height: 600dip;
}
#body{
    position: relative;
}
#nt-input-group,
#nt-cfg-group{
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    /*size: *;*/
    flow:vertical;
    padding: 5dip;
    border-spacing: 10dip;
    opacity: 1.0;
    overflow: hidden;
}
.translate-up{
    opacity: 0;
    transform: translate(0, -100%);
    transition: opacity(linear, 200ms) transform(cubic-out, 200ms) ;
}
.translate-dn{
    opacity: 0;
    transform: translate(0, 100%);
    transition: opacity(linear, 200ms) transform(cubic-out, 200ms) ;
}
#new-task-path{
    border-radius: 5dip;
    border: 1px @BORDERCOLOR solid;
    overflow: auto;
    size: *;
    color: @FONTCOLOR-DARK;
    font-family: exo2;
    font-size: 12pt;
    padding: 5dip;
    word-wrap:break-word;
}
.nt-btn{
    width: *;
    height: 32px;
    line-height: 32px;
    background: transparent;
    border: 1px @BORDERCOLOR solid;
    border-radius: 5dip;
    color: @FONTCOLOR-DARK;
    font-family: exo2;
    font-size: 12pt;
}
#tree-list{
    padding-right: 1.6em;
    prototype: RsTree;
}
#tree-list option{
    /*padding-left: 1.6em;*/
    overflow: hidden;
}
#tree-list option:expanded{
    height:auto;
}
#tree-list option:collapsed{
    height: 1.4em;
}
#tree-list option caption{
    width: *;
    flow:horizontal;
}
#tree-list option caption i{
    display: block;
    size: 1.4em;
    /*border: 1px @BORDERCOLOR solid;*/
    border-radius: 5dip;
    cursor: pointer;
    background: gold;
}
#tree-list option .content{
    padding-left: 2.4em;
}
#tree-list group{
    flow:horizontal;
}
#tree-list text{
    line-height:1.5em;
    overflow-x:hidden;
    white-space:nowrap;
    text-overflow:path-ellipsis;
}

#tree-list checkbox { style-set: m-checkbox; }
#tree-list caption > checkbox{
    width: *;
    padding-left: 1.8em;
}

